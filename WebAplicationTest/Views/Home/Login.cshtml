@model WebAplicationTest.Models.LoginClass
@{
    ViewBag.Title = "LogIn";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Index</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style type="text/css">
        body {
            margin: 20pt !important;
        }

        .error {
            color: red;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("SIE", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
                <a href="@Url.Action("LogIn","Home")" onclick="document.forms[0].submit();">
                    <img class="img-rounded" src="~/Content/Img/Flex_WHT_Sml_tm.png" />
                </a>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <h2>Sistema Integral de Educación (SIE)</h2>
        <div class="row">
            <div class="col-md-10 col-md-offset-1">
                <div class="col-sm-offset-3 col-sm-6">
                    <hr />
                    @*<h2 class="form-signin-heading">
                            Login
                        </h2>*@
                    @using (Html.BeginForm("LogIn", "Home", FormMethod.Post))
                    {
                        <div style="max-width: 900px;">

                            @Html.LabelFor(m => m.Username)
                            @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                            <div>
                                @Html.ValidationMessageFor(m => m.Username, "", new { @class = "error" })
                            </div>
                            <br />
                            @Html.LabelFor(m => m.Password)
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            <div>
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "error" })
                            </div>
                            <div class="checkbox">
                                @Html.Label("Remember Me", new { @for = "RememberMe" })
                                &nbsp;
                                &nbsp;
                                &nbsp;
                                @Html.CheckBoxFor(m => m.RememberMe)
                            </div>
                            <input type="hidden" name="ReturnUrl" value="@Request.QueryString["ReturnUrl"]" />
                            <input type="submit" value="Submit" class="btn btn-primary" />
                            <br />
                            <br />
                            <div id="dvMessage" style="display:none" class="alert alert-danger">
                                <strong>Error!</strong>
                                <span>@ViewBag.Message</span>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        <hr />
        <footer>
            <div class="navbar" style="text-align:center;">
                <p style="border-top:1px solid #e5e5e5; color:#777; font-family:Helvetica Neue,Helvetica,Arial,sans-serif; ">
                    Advertencia: La información contenida en este sitio está destinada únicamente a los empleados de Flex.
                    Si usted no es un empleado de Flex, cualquier distribución de estos contenidos, en cualquier forma, está estrictamente prohibido.
                </p>
            </div>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @if (@ViewBag.Message != null)
    {
        <script type="text/javascript">
            $(function () {
                $("#dvMessage").show();
            });
        </script>
    }
</body>
</html>